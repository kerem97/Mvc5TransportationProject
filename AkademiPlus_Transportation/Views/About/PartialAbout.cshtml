@model List<AkademiPlus_Transportation.Models.Tbl_About>


<section class="w3l-ab-page py-5" id="about1">
    <div class="container py-lg-5 py-md-4 py-2">
        <div class="row align-items-center">
            @foreach (var x in Model)
            {


            <div class="col-lg-6 pe-lg-5">
                <h6 class="title-subw3hny mb-2"></h6>
                <h3 class="title-w3l mb-2">
                   @x.AboutTitle
                </h3>

                <p class="mt-3">
                    @x.AboutContent2
                </p>
                <div class="row two-grids mt-5 pt-lg-4">
                    <div class="col-sm-6 grids_info d-flex">
                        <i class="fas fa-chalkboard-teacher"></i>
                        <div class="detail ms-3">
                            <h4>Canlı Takip</h4>

                        </div>
                    </div>
                    <div class="col-sm-6 grids_info d-flex mt-sm-0 mt-4">
                        <i class="fas fa-globe"></i>
                        <div class="detail ms-3">
                            <h4>
                                Global Hizmetler
                            </h4>
                           
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 offset-lg-1 text-end mt-lg-0 mt-5 position-relative">
                <img src="@x.AboutImage2" alt="" class="img-fluid radius-image">
                <div class="imginfo__box">
                    <h6 class="imginfo__title">16+</h6>
                    <p>Yılı aşan tecrübe ile</p>
                </div>
            </div>
            }
        </div>
    </div>
</section>
