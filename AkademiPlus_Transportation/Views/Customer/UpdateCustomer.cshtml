@model AkademiPlus_Transportation.Models.TblCustomer


@{
    ViewBag.Title = "UpdateCustomer";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<h2>Müşteri Bilgileri Güncelle</h2>

<form method="post">
    <br />
    @*<label>KategoriID</label>*@
    @Html.HiddenFor(x => x.CustomerID)
    <br />
    <label>Müşteri Adı</label>
    @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
    <br />
    <label>Müşteri Soyadı</label>
    @Html.TextBoxFor(x => x.CustomerSurname, new { @class = "form-control" })
    <br />
    <label>Müşteri Şehri</label>
    @Html.TextBoxFor(x => x.CustomerCity, new { @class = "form-control" })
    <br />
    <label>Müşteri Telefon Numarası</label>
    @Html.TextBoxFor(x => x.CustomerPhone, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>

</form>