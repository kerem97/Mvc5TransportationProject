@model List<AkademiPlus_Transportation.Models.Tbl_Services>

<section class="locations-1 w3services-3">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="heading text-center mx-auto">              
                <h3 class="title-w3l mb-3">Öne Çıkan Hizmetler</h3>
            </div>
            <div class="row">
                @foreach (var x in Model)
                {
                <div class="col-lg-3 col-6 mt-md-5 mt-4">
                    <div class="w3property-grid">
                        <a href="#property">
                            <div class="box16">
                                <img class="img-fluid" src="@x.ServiceImage" alt="">
                                <div class="box-content text-center">
                                    <i class="@x.ServiceImage2"></i>
                                    <h3 class="title">@x.ServiceName</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</section>